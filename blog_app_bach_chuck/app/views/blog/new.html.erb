<h1>Create Blog Post</h1>
<%= form_with url: '/blogs', local:true do |form| %>
    <%= form.label :title%>
    <%= form.text_field :title%>
    
    <br>
    <%= form.label :content, "What's on your mind?"%>
    <%= form.text_field :content%>
    
    <br>
    <%= form.submit :submit %>
<% end %>

<p>Back To <%= link_to 'All the Blogs', blogs_path %></p>